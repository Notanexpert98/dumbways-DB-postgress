<!-- Halaman Identitas -->

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Riko Website</title>
    <style>
      *, body { margin: 0px; } /* width */ ::-webkit-scrollbar { width: 10px; }
      /* Track */ ::-webkit-scrollbar-track { background: black; } /* Handle */
      ::-webkit-scrollbar-thumb { background: white; } /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover { background: #555; }
    </style>
    <link rel="stylesheet" href="web.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=SUSE:wght@100..800&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: orangered;">
    <nav style="background-color: grey; padding-top: 3px">
      <ul
        style="
          display: flex;
          flex-direction: row;
          gap: 20px;
          list-style-type: none;
          align-items: center;
          padding: 10px;
          padding-left: 15px;
          padding-right: 15px;
          font-family: SUSE, sans-serif;
          font-weight: 600;
          font-size: medium;
        "
      >
        <li>
          <img
            style="width: fit-content; height: 30px"
            src="https://dumbways.id/assets/images/brandred.png"
            alt=""
          />
        </li>
        <li>
          <a style="text-decoration: none; color: white" href="/">Home</a>
        </li>
        <li>
          <a style="text-decoration: none; color: white" href="/blog">Blog</a>
        </li>
        <li class="nav_item">
          <a
            style="text-decoration: none; color: white"
            href="/username"
          >Register</a>
        </li>
        <li style="width: 100%; display: flex; justify-content: flex-end">
          <a
            style="
              text-decoration: none;
              color: white;
              background-color: orangered;
              padding: 12px;
              border-radius: 5px;
            "
            href=""
          >
            Contact Me</a>
        </li>
      </ul>
    </nav>

    <div
      style="height: 10px; background-color:whitesmoke; margin-top:-17px; box-shadow: 0px 5px 10px grey"
    ></div>

    {{#if messages.error_login}}<div
        class="alert alert-primary"
        role="alert"
        style="text-align: center; margin-top:30px;"
      >{{messages.error_login}}</div>{{/if}}

    {{! Form Login Section }}

    <form class="mt-5" action="/login" method="post">
      <h2 class="text-center">Login Disini</h2>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          name="email_login"
          placeholder="Enter your email ...."
        />
        <div id="emailHelp" class="form-text">We'll never share your email with
          anyone else.</div>
      </div>
      <div class="mb-5">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
          name="pass_login"
          placeholder="Enter your password ...."
        />
      </div>
      <button
        type="submit"
        class="btn btn-secondary"
        style="background-color: orangered;"
      >Submit</button>
    </form>

  </body>
  <script src="web.js"></script>
</html>