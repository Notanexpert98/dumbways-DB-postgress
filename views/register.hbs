    {{! Navbar Section }}
    <nav style="background-color: grey; padding-top: 3px">
      <ul
        style="
          display: flex;
          flex-direction: row;
          gap: 20px;
          list-style-type: none;
          align-items: center;
          padding: 10px;
          padding-left: 15px;
          padding-right: 15px;
          font-family: SUSE, sans-serif;
          font-weight: 600;
          font-size: medium;
        "
      >
        <li>
          <img
            style="width: fit-content; height: 30px"
            src="https://dumbways.id/assets/images/brandred.png"
            alt=""
          />
        </li>
        <li>
          <a style="text-decoration: none; color: white" href="/">Home</a>
        </li>
        <li>
          <a style="text-decoration: none; color: white" href="/blog">Blog</a>
        </li>
        <li class="nav_item">
          <a style="text-decoration: none; color: white" href="/login">Login</a>
        </li>
        <li style="width: 100%; display: flex; justify-content: flex-end">
          <a
            style="
              text-decoration: none;
              color: white;
              background-color: orangered;
              padding: 12px;
              border-radius: 5px;
            "
            href=""
          >
            Contact Me</a>
        </li>
      </ul>
    </nav>

    <div
      style="height: 10px; background-color:whitesmoke; margin-top:-17px; box-shadow: 0px 5px 10px grey"
